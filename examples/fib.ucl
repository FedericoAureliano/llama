module main {  
  // Part 1: system description
  var a : bv32;
  var b : bv32;

  init {
    a = 0;
    b = 1;
  }

  next {
    a = b;
    b = a + b;
  }

  @synthesis function h(x : bv32, y : bv32) : boolean;

  // Part 2: system specification.
  theorem a_le_b: a <= b && h(a, b);

  // Part 3: proof script.
  control {
    induction(1);
  }
}
